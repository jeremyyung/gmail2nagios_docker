#vi /opt/nagios/etc/cgi.cfg  > add the following to grant icmAdmin more nagios permissions
authorized_for_configuration_information=icmAdmin

authorized_for_all_services=icmAdmin                           
authorized_for_all_hosts=icmAdmin  

